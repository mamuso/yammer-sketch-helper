{
  "name": "🙆 Yammer Sketch Tools",
  "description": "Our design team swiss knife.",
  "author": "Manuel Muñoz Solera",
  "authorEmail": "mamuso@mamuso.net",
  "version": "0.0.9",
  "appcast" : "https://raw.githubusercontent.com/mamuso/yammer-sketch-tools/master/appcast.xml",
  "identifier": "io.mamuso.sketch.ytools",
  "commands": [
    {
      "name": "🔓 Unlock All the Layers",
      "identifier": "layers-unlock",
      "shortcut": "ctrl alt cmd u",
      "script": "layers/Unlock.js"
    },
    {
      "name": "👏 Toggle Margin Boxes",
      "identifier": "layers-toggle-margin-block",
      "shortcut": "ctrl alt cmd m",
      "script": "layers/ToggleMarginBlocks.js"
    },
    {
      "name": "⬆️ Compact Vertical Space",
      "identifier": "layers-compact-vertical-space",
      "shortcut": "ctrl alt ↑",
      "script": "layers/CompactVerticalSpace.js"
    },
    {
      "name": "⬅️ Compact Horizontal Space",
      "identifier": "layers-compact-horizontal-space",
      "shortcut": "ctrl alt ←",
      "script": "layers/CompactHorizontalSpace.js"
    },
    {
      "name": "✂️ Truncate text lines",
      "identifier": "text-truncate-text-lines",
      "shortcut": "ctrl alt cmd t",
      "script": "Text/TruncateLines.js"
    },
    {
      "name": "🐜 Export SVG icons",
      "identifier": "icons-export-svg-icons",
      "script": "Icons/ExportIcons.js"
    }
  ],
  "menu": {
    "items": [
      "unlock",
      "layers-toggle-margin-block",
      "layers-compact-vertical-space",
      "layers-compact-horizontal-space",
      "text-truncate-text-lines",
      "icons-export-svg-icons"
    ]
  }
}
